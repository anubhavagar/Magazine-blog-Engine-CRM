    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="description" content="Main Hun Aam Aadmi | Management Portel">
    <meta name="author" content="maihuaamaadmi">

    <link rel="shortcut icon" href="../../Content/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="../../Content/images/favicon.ico" type="image/x-icon">

    <title>Manage | मैं हूँ आम आदमी</title>
    <!-- Bootstrap core CSS -->
    <link href="../../Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]><script type="text/javascript" src="bootstrap/js/html5shiv.js"></script>

    <![endif]-->
    <!-- Custom styles for this template -->
    <link href="../../Content/css/base.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/components.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/colorschemes/default.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/jhtmlarea/jHtmlArea.css" rel="stylesheet" type="text/css" />
    @*<link href="../../Content/css/jhtmlarea/jHtmlArea.ColorPickerMenu.css" rel="stylesheet"
        type="text/css" />*@
          <link rel="stylesheet" href="../../Content/vendor/font-awesome/css/font-awesome.min.css" />
    <!--[if IE 8]>
			<link rel="stylesheet" href="../../Content/vendor/font-awesome/css/font-awesome-ie7.min.css">
		<![endif]-->
    <link rel="stylesheet" href="../../Content/vendor/prettyPhoto/css/prettyPhoto.css" />
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700|Lato:300,400,700,400italic,700italic|Droid+Serif'
        rel='stylesheet' type='text/css' />
    
    <script src="../../Scripts/js/modernizr-2.6.2-respond-1.1.0.min.js" type="text/javascript"></script>
    <script src="../../Scripts/js/jquery-1.10.1.min.js" type="text/javascript"></script>
    <link href="../../Content/css/tablesorter/tablesorter_blue.css" rel="stylesheet"
        type="text/css" />
    <link href="../../Content/css/magicsuggest-1.3.1-min.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/manage.css" rel="stylesheet" type="text/css" />
</head>
<body>
   
   <div class="container">

      <!-- Static navbar -->
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="@Url.Action("Index", "Manage")">मैं हूँ आम आदमी | Management Portal</a>
        </div>
        <div class="navbar-collapse collapse">
         
          <ul class="nav navbar-nav navbar-right">
          @if(Request.IsAuthenticated) {
              <li class="active"><button class="btn btn-default">Welcome <strong>@User.Identity.Name</strong></button></li>
            <li><button id="signout" class="btn btn-danger" title="Sign Out">Sign Out</button>
            </li>
          }
          else
          { 
             @: <li><button id="signin" class="btn btn-success" title="Sign In">Sign In</button></li>
          }
            
            @*<li><a href="#">Fixed top</a></li>*@
          </ul>
        </div><!--/.nav-collapse -->
      </div></div><!-- /container -->
    

     <section id="main-content">
       @RenderBody()
     </section>
    
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
   
    <script src="../../Scripts/js/placeholder.js" type="text/javascript"></script>
   
   
   <script type="text/javascript">
       $('#signout').click(function () {
           window.location.href = '@Url.Action("SignOut", "Account")';
       });
       $('#signin').click(function () {
           window.location.href = '@Url.Action("Authenticate", "Account")';
       });       
   </script>
</body>
</html>
